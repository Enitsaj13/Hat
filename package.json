{
  "name": "hat",
  "main": "expo-router/entry",
  "version": "2.0.0",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios --device",
    "web": "expo start --web",
    "test": "jest --watchAll",
    "prebuild": "npx expo prebuild",
    "prebuild:clean": "npx expo prebuild --clean",
    "format": "prettier --write \"src/**/*.{js,jsx,json,md,ts,tsx}\"",
    "lint": "eslint \"src/**/*.{js,jsx,json,md,ts,tsx}\" && prettier \"app/**/*.{js,jsx,json,md,ts,tsx}\" --check",
    "lint:fix": "eslint \"src/**/*.{js,jsx,json,md,ts,tsx}\" --fix && npm run format",
    "adb": "adb reverse tcp:9090 tcp:9090 && adb reverse tcp:3000 tcp:3000 && adb reverse tcp:9001 tcp:9001 && adb reverse tcp:8081 tcp:8081",
    "build:ios:sim": "eas build --profile preview --platform ios --local",
    "build:ios:dev": "eas build --profile preview:device --platform ios --local",
    "build:ios:prod": "eas build --profile production --platform ios --local",
    "build:android:sim": "eas build --profile preview --platform android --local",
    "build:android:dev": "eas build --profile preview:device --platform android --local",
    "build:android:prod": "eas build --profile production --platform android --local",
    "bundle:web": "npx expo export --platform web",
    "serve:web": "npx server dist",
    "upgrade": "npx expo install --check",
    "prepare": "husky install"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@morrowdigital/watermelondb-expo-plugin": "^2.3.1",
    "@nozbe/watermelondb": "^0.27.1",
    "@react-navigation/native": "^6.0.2",
    "deepmerge": "^4.3.1",
    "expo": "~50.0.13",
    "expo-build-properties": "~0.11.1",
    "expo-dev-client": "~3.3.10",
    "expo-font": "~11.10.3",
    "expo-linking": "~6.2.2",
    "expo-localization": "~14.8.3",
    "expo-router": "~3.4.8",
    "expo-splash-screen": "~0.26.4",
    "expo-status-bar": "~1.11.1",
    "expo-system-ui": "~2.9.3",
    "expo-updates": "~0.24.12",
    "expo-web-browser": "~12.8.2",
    "husky": "^9.0.11",
    "i18n-js": "^4.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.5",
    "react-native-paper": "^5.12.3",
    "react-native-safe-area-context": "4.8.2",
    "react-native-screens": "~3.29.0",
    "react-native-unistyles": "^2.5.0",
    "react-native-web": "~0.19.6"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.45",
    "eslint": "^8.57.0",
    "eslint-config-universe": "^12.0.0",
    "jest": "^29.2.1",
    "jest-expo": "~50.0.4",
    "prettier": "^3.2.5",
    "react-test-renderer": "18.2.0",
    "snyk": "^1.1284.0",
    "typescript": "^5.1.3"
  },
  "overrides": {
    "@expo/image-utils": {
      "semver": "7.6.0"
    }
  },
  "private": true
}
